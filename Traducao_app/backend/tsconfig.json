//teste de configuração do tsconfig.json
{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022", // Para garantir suporte a recursos modernos do JS

    /* Modules */
    "module": "ESNext", // Usar ES Modules
    "moduleResolution": "node", // Resolver módulos de forma similar ao Node.js
    "rootDir": "./src", // Diretório raiz onde está o código TypeScript
    "esModuleInterop": true, // Habilitar interoperação com módulos CommonJS
    "forceConsistentCasingInFileNames": true, // Garantir nomes de arquivos consistentes

    /* Output */
    "outDir": "./dist", // Diretório de saída para os arquivos compilados

    /* Type Checking */
    "strict": true, // Habilitar verificações de tipo rigorosas
    "skipLibCheck": true // Ignorar verificações de tipos em arquivos de biblioteca
  },
  "include": ["src"], // Incluir todos os arquivos dentro de src
  "exclude": ["node_modules"] // Excluir a pasta node_modules
}
